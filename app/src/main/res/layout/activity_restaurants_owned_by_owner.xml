<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_new_restaurant_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:onClick="onAddRestaurantClick"
        android:text="@string/owner_restaurant_add_btn" />

    <TextView
        android:id="@+id/restaurants_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_restaurant_btn"
        android:layout_margin="2dp"
        android:text="@string/restaurant_owner_tv" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/owned_restaurant_card_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurants_owned"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
</RelativeLayout>